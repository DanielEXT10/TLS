<% include partials/header%>
<div class="container" style="margin-top: 2rem;  ">
    <div class="row">
        <div class="card">
        <h5>Customer: <%=tool.customer%></h5> 
        <h5>Tool Type:<%=tool.tool_type%></h5> 
        <h5>FC: <%=tool.file_code%></h5> 
        <h5>Serial: <%=tool.tool_serial%></h5> 
    </div>
        
        
    </div>
    <div class="row">

        <div class="col-md-6">

            <div class="card">


                <form action="/add_connection" style="margin: 2rem; margin-bottom: 1rem;">
                    <h2 style="text-align: center;">New Connection Data</h2>
                    <div class="form-group">
                        <label for="">Connection Name:</label>
                        <input type="text" name="connection_name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="">Connection #:</label>
                        <input type="text" name="conection_number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for=""> Connection Type:</label>
                        <input type="text" name="conection_type"  class="form-control">
                    </div>
                    <div class="form-group">
                            <label >Thread Type:</label>
                            <select class="form-control" name="thread_type">
                              <option>RH</option>
                              <option>LH</option>
    
                            </select>
                          </div>
                          <div class="form-group">
                                <label >Operation:</label>
                                <select class="form-control" name="operation">
                                  <option>Make</option>
                                  <option>Brake</option>
        
                                </select>
                              </div>

                    <div class="form-group">
                        <label for="">Target Torque:</label>
                        <input type="text" name="target_torque"  class="form-control">
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Add Connection</button>
                    </div>
                </form>

            </div>
        </div>

        <div class="col-md-6">
            <table class="table table bordered table-hover">
                <thead>
                    <tr>
                        <th>Connection</th>
                        <th>Description</th>
                        <th>Operation</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>

<% include partials/footer%>